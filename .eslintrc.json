{
    "env"          : {
        "browser": true,
        "es6"    : true,
        "node"   : true
    },
    "extends"      : "eslint:all",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType" : "module"
    },
    "parser"       : "babel-eslint",
    "rules"        : {
        "id-length"              : [
            "error",
            {
                "min"       : 2,
                "exceptions": [
                    "_",
                    "$",
                    "i",
                    "j",
                    "x",
                    "y",
                    "e"
                ]
            }
        ],
        "linebreak-style"        : [
            "error",
            "unix"
        ],
        "semi"                   : [
            "error",
            "always"
        ],
        "max-len"                : [
            "error",
            120
        ],
        "max-params"             : [
            "error",
            10
        ],
        "padded-blocks"          : [
            "error",
            "never"
        ],
        "func-style"             : [
            "error",
            "declaration"
        ],
        "key-spacing"            : [
            "warn",
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon" : true
                },
                "multiLine" : {
                    "beforeColon": false,
                    "afterColon" : true,
                    "align"      : "colon"
                }
            }
        ],
        "object-property-newline": [
            "error",
            {
                "allowMultiplePropertiesPerLine": true
            }
        ],
        "dot-location"           : [
            "error",
            "property"
        ],
        "no-plusplus"            : [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "consistent-this"        : [
            "error",
            "self"
        ],
        "prefer-destructuring"   : "off",
        "object-curly-newline"   : "off",
        "quotes"                 : "off",
        "indent"                 : "off",
        "no-multi-spaces"        : "off",
        "init-declarations"      : "off",
        "no-magic-numbers"       : "off",
        "no-console"             : "off",
        "no-sync"                : "off",
        "lines-around-comment"   : "off",
        "sort-imports"           : "off",
        "sort-vars"              : "off",
        "spaced-comment"         : "off",
        "sort-keys"              : "off",
        "max-statements"         : "off",
        "no-mixed-operators"     : "off",
        "no-param-reassign"      : "off"
    }
}
