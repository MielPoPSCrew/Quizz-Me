<li>
    <div class="collapsible-header"><span class="quizz-question-id">#{{ quizz_answer_id }} </span>- {{ quiz.question | truncate(50)}}</div>
    <div class="collapsible-body">
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="" id="question_{{ quizz_answer_id }}" type="text" class="validate" value="{{ quiz.question }}">
                        <label for="question_{{ quizz_answer_id }}">Question</label>
                    </div>
                </div>

                {%  for choice in quiz.choices %}
                    <div class="row">
                        <div class="input-field col s10">
                            <input placeholder="" id="question_{{ quizz_answer_id }}_choice_{{ loop.index }}" type="text" class="validate" value="{{ choice }}">
                            <label for="question_{{ quizz_answer_id }}_choice_{{ loop.index }}">Réponse {{ loop.index }}</label>
                        </div>
                        <p class="col s2">
                            <input name="question_{{ quizz_answer_id }}_answer" type="radio" id="question_{{ quizz_answer_id }}_answer_{{ loop.index }}" {% if quiz.answer == loop.index %}checked{% endif %}/>
                            <label for="question_{{ quizz_answer_id }}_answer_{{ loop.index }}"></label>
                        </p>
                    </div>
                {% endfor %}

                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="question_{{ quizz_answer_id }}_info" class="materialize-textarea">{{ quiz.info }}</textarea>
                        <label for="question_{{ quizz_answer_id }}_info">Information sur la réponse</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12 center-align">
                        <button class="btn waves-effect waves-light red darken-1" id="game_create" type="submit" name="action">Supprimer la question
                            <i class="material-icons right">delete</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</li>