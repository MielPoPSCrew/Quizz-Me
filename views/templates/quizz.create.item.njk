                        <input placeholder="" type="text" class="validate question-name" value="">
                        <label>Question</label>
                    </div>
                </div>

                <!-- answer 1 -->
                <div class="row">
                    <div class="input-field col s10">
                        <input placeholder="" type="text" class="validate answer" value="">
                        <label>Réponse 1</label>
                    </div>
                    <p class="col s2">
                        <input name="correctanswer" type="radio" value="0" id="" checked/>
