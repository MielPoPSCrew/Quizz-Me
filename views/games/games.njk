{% extends 'templates/game.layout.njk' %}

{% block scripts %}
    <script type="text/javascript" src="/js/games/games.play.client.js"></script>
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/css/game.css"/>
{% endblock %}

{% block main %}
    <span class="hide" id="game-information" data-player="{{ username }}" data-creator="{{ creator }}"></span>
    <span class="username-hidden">{{ username }}</span>
    <div class="row game">

        <div class="col m12 l8 main-game-block">
            <h1 class="content-header">Quiz : <span class="editable">-</span></h1>

            <div class="col s12">
                {% include 'games/game/question.njk' %}
            </div>

            <div class="col s12">
                {% include 'games/game/answers.njk' %}

            </div>
        </div>

        <div class="col m12 l4 scores-game-block">
            {% include 'games/game/players.njk' %}
        </div>

    </div>
{% endblock %}
